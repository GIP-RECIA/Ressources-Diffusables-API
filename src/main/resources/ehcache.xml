<?xml version="1.0" encoding="UTF-8"?>
<ehcache
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="ehcache.xsd"
        updateCheck="true" monitoring="autodetect" dynamicConfig="true"
>
    <diskStore path="cache-api-mediacentre" />

    <cache name="cacheRessourcesDiffusables"
           eternal="false"
           maxBytesLocalHeap="100M"
           maxBytesLocalDisk="100M"
           memoryStoreEvictionPolicy="LFU"
    >
        <cacheEventListenerFactory class="fr.anael.apimediacentre.cache.CacheEventLoggerFactory" properties="" listenFor="all"/>
    </cache>
</ehcache>
